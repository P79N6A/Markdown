#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "en_US.UTF-8");

    wcout << L"sizeof wchar is " << sizeof(wchar_t) << endl;

    wchar_t a = L'你';
    wcout << L"你" << "'s wchar is " << a << endl;

    const wchar_t * a_str = L"用unicode - utf8编码";
    wcout << L"print chinese : \"" << a_str << "\"" << endl;

    return 0;

}
